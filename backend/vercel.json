{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "buildCommand": "npx prisma generate",
  "functions": {
    "api/index.ts": {
      "includeFiles": "{prisma/**,node_modules/.prisma/**}"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.ts" },
    { "source": "/:path*", "destination": "/api/index.ts" }
  ]
}
